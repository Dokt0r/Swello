<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloChipFiltro" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/dark_cool_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipMinTouchTargetSize">48dp</item>
    </style>

    <style name="ShapeTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item> <!-- valor base para todas -->
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

</resources>
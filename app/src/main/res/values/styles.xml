<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloChipFiltro" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/dark_cool_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipMinTouchTargetSize">48dp</item>
    </style>

    <style name="ShapeTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item> <!-- valor base para todas -->
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <!-- Estilo para los botones de ordenación -->
    <style name="SortButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/dark_cool_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/dark_cool_blue</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <!-- Tamaño pequeño -->
    <style name="Theme.Swello.Small" parent="Theme.Swello">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Tamaño mediano -->
    <style name="Theme.Swello.Medium" parent="Theme.Swello">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Tamaño grande -->
    <style name="Theme.Swello.Large" parent="Theme.Swello">
        <item name="android:textSize">20sp</item>
    </style>

    <!--  playa detail pantalla  -->

</resources>
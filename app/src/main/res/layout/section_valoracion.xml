<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section_valoracion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <!-- Título sección -->
    <TextView
        android:id="@+id/txt_valoracion_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoración"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Espacio -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <!-- Valoración media numérica -->
    <TextView
        android:id="@+id/txt_valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Opcional: cantidad de valoraciones -->
    <TextView
        android:id="@+id/txt_cantidad_valoraciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(120 opiniones)"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <!-- Línea separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>
</LinearLayout>


<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- Imagen de fondo adaptada al CardView y recortada en los bordes -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <!-- Contenido encima de la imagen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingTop="30dp">

        <!-- Tamaño de las olas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño de las olas (m)"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_wave_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:value="1.5"
            android:valueFrom="0.5"
            android:valueTo="5"
            app:values="@array/wave_height_default" />

        <!-- Dirección de las olas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección de las olas"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_wave_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="0dp"
            app:chipSpacingVertical="8dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="N" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="NE" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="E" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="SE" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="S" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="SW" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="W" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="NW" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Periodo de olas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodo de las olas (s)"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_wave_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:value="1.5"
            android:valueFrom="5.0"
            android:valueTo="12.0"
            app:values="@array/wave_period_default" />

        <!-- Temperatura del agua -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura del agua (°C)"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_sst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="-2-15°C" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="15–25°C" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="+25°C" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Nivel del surfista -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel del surfista"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_nivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Principiante" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Intermedio" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Experto" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Servicios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios disponibles"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_servicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Escuela surf" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Aparcamiento" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Duchas" />

            <com.google.android.material.chip.Chip
                style="@style/EstiloChipFiltro"
                android:text="Chiringuito" />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_aplicar_filtros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aplicar filtros"
            android:textColor="@color/white"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

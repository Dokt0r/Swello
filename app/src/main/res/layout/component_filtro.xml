<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- Imagen de fondo adaptada al CardView y recortada en los bordes -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distancia_maxima"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_distancia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="200"
                android:stepSize="10"
                app:values="@array/distancia_default" />

            <!-- Tamaño de las olas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tamano_de_las_olas_m"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_wave_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="0.5"
                android:value="1.5"
                android:valueFrom="0.5"
                android:valueTo="5"
                app:values="@array/wave_height_default" />

            <!-- Dirección de las olas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direccion_de_las_olas"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_wave_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="0dp"
                app:chipSpacingVertical="8dp"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/N" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/NE" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/E" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/SE" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/S" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/SW" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/W" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="@string/NW" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Temperatura del agua -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperatura_del_agua"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_sst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="0-15°C" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="15–25°C" />

                <com.google.android.material.chip.Chip
                    style="@style/EstiloChipFiltro"
                    android:text="+25°C" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Sección Ordenación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ordenar_por"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ordenar_distancia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/distancia"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_cool_blue"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ordenar_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/nombre"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_cool_blue"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ordenar_altura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/altura_olas"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_cool_blue"
                app:cornerRadius="8dp" />

            <!-- (tal vez se implementará en el futuro)
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ordenar_valoracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Valoración"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_cool_blue"
                app:cornerRadius="8dp" />
            -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_aplicar_filtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/aplicar_filtros"
                android:textColor="@color/white"
                app:backgroundTint="@color/dark_cool_blue" />
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>